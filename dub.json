{
	"name": "godot-d-importer",
	"authors": [
		"sheepandshepherd"
	],
	"dependencies": {
		"emsi_containers": "~>0.8.0-alpha.19",
		"godot-d": { "path": "godot-d" },
		"godot-d:class-finder": "*",
		"dsymbol": "~>0.9.0",
		"libdparse": "~>0.13.1",
		"dub": "~>1.17.0"
	},
	"description": "Godot import plugin to simplify Godot-D scripting",
	"copyright": "Copyright Â© 2018, sheepandshepherd",
	"license": "MIT",
	
	"dflags-windows-dmd": ["-defaultlib=phobos.lib"],
	"dflags-linux-dmd": ["-defaultlib=libphobos2.a"],
	"dflags-ldc": ["-link-defaultlib-shared=false"],
	
	"targetType": "dynamicLibrary",
	"targetPath": ".",

	"preGenerateCommands": [ "dub run godot-d:pregenerate" ]
}
